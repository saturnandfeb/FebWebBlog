     <h2> Create a New Post</h2>

     <div class="container">
     <form action="/posts" method="POST">
         <label for = "tname" id="ptitle">Title</label>
            <input type="text" id="tname" name="title" placeholder="Post Title" required>
        <br><br>
            <label for = "content" id="pcontent">Content</label>
        <textarea name="content" id="content" placeholder="Post Content" required></textarea>
        <br><br>
        <button type="submit">Create Post</button>
    </form>
</div>

    <h2> Posts </h2>
    <br><hr><br>
    
      
          <ul id="post-lists">
        <% posts.forEach((post, index) => { %>
           

           <li>
                <h3> <%= post.title %></h3>
            <p> <%= post.content %> </p>
            <a href="/posts/edit/<%= index %>" class="button">Edit</a>
            <form action="/posts/delete/<%= index %>" method="POST" style="display:inline;">
                <button type="submit">Delete</button> <!-- Delete button -->
            </li>
      <%  }) %>
    </ul>

